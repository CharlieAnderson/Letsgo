<?xml version="1.0" encoding="utf-8"?>
<com.example.charlesanderson.letsgo.views.EventFeedConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:elevation="6dp"
        android:background="@null"
        android:id="@+id/event_card"
        app:cardUseCompatPadding="true"
        app:child_id="@id/event_text"
>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_text"
                android:textSize="32sp"
                android:background="@null"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="hello" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                app:srcCompat="@drawable/fatpika" app:layout_constraintTop_toBottomOf="@+id/date_text"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_text" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/event_text" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/time_text" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="TextView"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="88dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/event_text"/>

</com.example.charlesanderson.letsgo.views.EventFeedConstraintLayout>